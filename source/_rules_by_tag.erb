<div class="row">
  <% in_two(rules_by_tag) do |half| %>
  <div class="col-lg-6">
    <ul class="list-group">
      <% half.each do |tag, rules| %>
         <li class="list-group-item">
          <span class="badge"><%= tag %></span>
          <ul>
            <% rules.reject{|r| r['deprecated']}.each do |rule| %>
              <li><a href="#<%= rule['code'] %>"><%= rule['code'] %>: <%= rule['name'] %></a></li>
            <% end %>
          </ul>
        </li>
      <% end %>
    </ul>
  </div>
  <% end %>
</div>
